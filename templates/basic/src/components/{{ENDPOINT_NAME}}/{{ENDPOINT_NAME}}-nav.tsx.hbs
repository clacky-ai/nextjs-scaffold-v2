{{#if hasNavigation}}
'use client'

import Link from 'next/link'
import { useSession, signOut } from 'next-auth/react'
import { Button } from '@/components/ui/button'

export function {{pascalCase name}}Nav() {
  const { data: session } = useSession()

  return (
    <nav className="bg-white shadow-sm border-b">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div className="flex justify-between h-16">
          <div className="flex items-center">
            <Link href="{{#if useRouteGroup}}/{{else}}{{pathPrefix}}{{/if}}" className="text-xl font-bold text-gray-900">
              {{displayName}}
            </Link>
          </div>

          <div className="flex items-center space-x-4">
            {session ? (
              <>
                <span className="text-gray-700">
                  欢迎，{session.user?.name}
                </span>
                <Link href="{{#if useRouteGroup}}/{{defaultPage}}{{else}}{{pathPrefix}}/{{defaultPage}}{{/if}}">
                  <Button variant="outline" size="sm">
                    {{#if (eq defaultPage 'dashboard')}}仪表板{{else}}个人中心{{/if}}
                  </Button>
                </Link>
                <Button
                  variant="outline"
                  size="sm"
                  onClick={() => signOut({ callbackUrl: '{{#if useRouteGroup}}/sign-in{{else}}{{pathPrefix}}/sign-in{{/if}}' })}
                >
                  退出登录
                </Button>
              </>
            ) : (
              <div className="space-x-2">
                <Link href="{{#if useRouteGroup}}/sign-in{{else}}{{pathPrefix}}/sign-in{{/if}}">
                  <Button variant="outline" size="sm">
                    登录
                  </Button>
                </Link>
                {{#if hasSignUp}}
                <Link href="{{#if useRouteGroup}}/sign-up{{else}}{{pathPrefix}}/sign-up{{/if}}">
                  <Button size="sm">
                    注册
                  </Button>
                </Link>
                {{/if}}
              </div>
            )}
          </div>
        </div>
      </div>
    </nav>
  )
}
{{else}}
// {{displayName}}不需要导航栏组件
export function {{pascalCase name}}Nav() {
  return null
}
{{/if}}